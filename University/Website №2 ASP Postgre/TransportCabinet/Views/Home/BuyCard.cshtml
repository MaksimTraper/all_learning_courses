@model BuyCardModel

@{
    ViewBag.Title = "Касса";
}

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Демо Bootstrap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script type="text/javascript" src="jquery.js"></script>
</head>

<body class="backgr-gradient">
    @Html.Partial("~/Views/Header/Authtorized.cshtml", Model.user);

    @if (Model.message != null)
    {
        <div class="container" style="width: 80%; background: white; border-radius: 50px; border: 2px solid grey;">
            <div class="row">
                <div class="d-flex align-items-center">
                    <h3 class="text-center" style="text-font: 10px; color: black; text-style: bold; margin-left: 35%; margin-right: 35%; margin-top: 1%">@Model.message</h3>
                </div>
            </div>
        </div>
        <p></p>
    }
    <div class="container common">
        <div class="row">
            <!--Пополнение баланса-->
            <form action="/Home/AddBalance" method="post">
                <div class="d-flex align-items-center">
                    <div class="col commond">
                        <p style="margin-top: 2%;" class="text-center boldp">Пополнить баланс</p>
                        <div class="mb-3">
                            <p for="exampleFormControlnput1" class="form-label text-center">Сумма пополнения</p>
                            <input name="balance" type="number" step="0.01" class="form-control" id="exampleFormControlInput1" style="width: 50%; margin-left: 25%; margin-right: 25%;" max="100000" min="0">
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary" style="width: 50%; margin-left: 25%; margin-right: 25%;">Пополнить</button>
                        </div>
                    </div>
                </div>
            </form>

            <form action="/Home/BuyTripCard" method="post">
                <div class="col commond align-self-center">
                    <div class="row">
                        <p class="text-center boldp" style="margin-top: 2%;">Купить проездной</p>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class=" boldp" style="margin-top: 1vh;">1 день</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc1" type="number" class="form-control" min="0" max="730" value="0" readonly>
                                <button id="minus1" class="btn btn-danger" type="button">-</button>
                                <button id="plus1" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">3 дня</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc2" type="number" class="form-control" min="0" max="240" value="0" readonly>
                                <button id="minus2" class="btn btn-danger" type="button">-</button>
                                <button id="plus2" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">5 дней</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc3" type="number" class="form-control" min="0" max="128" value="0" readonly>
                                <button id="minus3" class="btn btn-danger" type="button">-</button>
                                <button id="plus3" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">30 дней</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc4" type="number" class="form-control" min="0" max="32" value="0" readonly>
                                <button id="minus4" class="btn btn-danger" type="button">-</button>
                                <button id="plus4" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">90 дней</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc5" type="number" class="form-control" min="0" max="8" value="0" readonly>
                                <button id="minus5" class="btn btn-danger" type="button">-</button>
                                <button id="plus5" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">365 дней</p>
                        </div>
                        <div class="col">
                            <div class="input-group mb-2">
                                <input id="calc6" type="number" class="form-control" min="0" max="2" value="0" readonly>
                                <button id="minus6" class="btn btn-danger" type="button">-</button>
                                <button id="plus6" class="btn btn-success" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-auto" style="margin-bottom: 1%;">
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">Всего дней: </p>
                        </div>
                        <div class="col">
                            <input id="days" name="days" type="number" class="form-control" min="0" max="730" value="0" readonly>
                        </div>
                        <div class="col">
                            <p class="boldp" style="margin-top: 1vh;">Стоимость: </p>
                        </div>
                        <div class="col">
                            <input name="price" id="price" type="number" class="form-control" min="0" value="0" readonly>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary" style="width: 50%; margin-left: 25%; margin-right: 25%;">Купить</button>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <h5 class="text-center" style="color:gray; font-size: 10px; font-style:italic" text-cen>P.S: максимальный срок единовременной покупки - 2 года</h5>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script type="text/javascript" src="https://bootstraptema.ru/plugins/jquery/jquery-1.11.3.min.js"></script>
    <script>
        $('#minus1').click(function () {
            if (parseInt($("#calc1").val()) > 0) {
                $("#calc1").val(parseInt($("#calc1").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 1);
                $("#price").val(parseInt($("#price").val()) - 250);
            }
        });
        $('#plus1').click(function () {
            if (parseInt($("#days").val()) < 720) {
                $("#calc1").val(parseInt($("#calc1").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 1);
                $("#price").val(parseInt($("#price").val()) + 250);
            }
        });

        $('#minus2').click(function () {
            if (parseInt($("#calc2").val()) > 0) {
                $("#calc2").val(parseInt($("#calc2").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 3);
                $("#price").val(parseInt($("#price").val()) - 450);
            }
        });
        $('#plus2').click(function () {
            if (parseInt($("#days").val()) < 718) {
                $("#calc2").val(parseInt($("#calc2").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 3);
                $("#price").val(parseInt($("#price").val()) + 450);
            }
        });

        $('#minus3').click(function () {
            if (parseInt($("#calc3").val()) > 0) {
                $("#calc3").val(parseInt($("#calc3").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 5);
                $("#price").val(parseInt($("#price").val()) - 750);
            }
        });
        $('#plus3').click(function () {
            if (parseInt($("#days").val()) < 716) {
                $("#calc3").val(parseInt($("#calc3").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 5);
                $("#price").val(parseInt($("#price").val()) + 750);
            }
        });

        $('#minus4').click(function () {
            if (parseInt($("#calc4").val()) > 0) {
                $("#calc4").val(parseInt($("#calc4").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 30);
                $("#price").val(parseInt($("#price").val()) - 3000);
            }
        });
        $('#plus4').click(function () {
            if (parseInt($("#days").val()) < 691) {
                $("#calc4").val(parseInt($("#calc4").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 30);
                $("#price").val(parseInt($("#price").val()) + 3000);
            }
        });

        $('#minus5').click(function () {
            if (parseInt($("#calc5").val()) > 0) {
                $("#calc5").val(parseInt($("#calc5").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 90);
                $("#price").val(parseInt($("#price").val()) - 8000);
            }
        });
        $('#plus5').click(function () {
            if (parseInt($("#days").val()) < 631) {
                $("#calc5").val(parseInt($("#calc5").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 90);
                $("#price").val(parseInt($("#price").val()) + 8000);
            }
        });

        $('#minus6').click(function () {
            if (parseInt($("#calc6").val()) > 0) {
                $("#calc6").val(parseInt($("#calc6").val()) - 1);
                $("#days").val(parseInt($("#days").val()) - 365);
                $("#price").val(parseInt($("#price").val()) - 25000);
            }
        });
        $('#plus6').click(function () {
            if (parseInt($("#days").val()) < 366) {
                $("#calc6").val(parseInt($("#calc6").val()) + 1);
                $("#days").val(parseInt($("#days").val()) + 365);
                $("#price").val(parseInt($("#price").val()) + 25000);
            }
        });
    </script>
</body>


<footer>
</footer>

</html>

<style>
    .btn-ch {
        margin-top: 7%;
        margin-left: 10%;
        width: 80%;
    }

    .avatar {
        width: 10vh;
        height: 10vh;
    }

    .dropdown-menu {
        width: 300px;
        font-size: 20px;
    }

    .imgcab {
        height: 60px;
        width: 60px;
    }

    .square {
        border: 2px solid grey;
        width: 100%;
        height: 100%;
        margin-top: 20%;
    }

    .commond {
        background: white;
        border-radius: 50px;
        border: 2px solid grey;
        margin: 10px;
        margin-top: 2%;
    }

    .common {
        width: 80%;
        height: 75%;
        background: white;
        border-radius: 50px;
        border: 2px solid grey;
        padding: 3%;
    }

    .headernav {
        width: 90%
    }

    html {
        scroll-behavior: smooth;
    }

    .backgr-gradient {
        width: 100%;
        height: 1024px;
        overflow: hidden;
        position: relative;
        align-items: flex-start;
        flex-shrink: 0;
        background-image: linear-gradient(180deg, rgba(17, 125, 203, 1) 0%, rgba(255, 255, 255, 0) 96%, rgba(255, 255, 255, 0) 96%, rgba(255, 255, 255, 0) 100%);
    }

    .btn-signup {
        background-color: #6CC2FF;
        border: 1px solid #000000;
        color: white;
        padding: 10px;
        border-radius: 20px;
    }

    .btn-login {
        min-width: 120px;
        padding: 10px;
        border-radius: 20px;
    }

        .btn-signup:hover,
        .btn-login:hover {
            background-color: white;
            color: black;
            border: 1px solid #000000;
        }

    .nav-btn {
        font-size: 25px;
        text-indent: 15px;
    }

        .nav-btn:hover {
            font-size: 35px;
            text-indent: 10px;
        }

    .boldp,
    ul {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: bold;
        font-size: 25px;
        line-height: 15px;
        letter-spacing: 0.05em;
    }

    .points {
        padding-left: 5%;
    }

    .imge {
        text-align: center;
    }
</style>